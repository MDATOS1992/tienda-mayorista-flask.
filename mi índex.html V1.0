<!-- index.html V 1.0 (frontend demo con carrito en JS local) -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tienda Mayorista</title>
  <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
</head>
<body>
  <header>
    <h1>CatÃ¡logo Mayorista</h1>
    <nav>
      <button id="carrito-btn">ðŸ›’ Carrito (<span id="carrito-count">0</span>)</button>
    </nav>
  </header>

  <main>
    <section class="productos">
      <div class="producto">
        <h2>Resma A4 80gr</h2>
        <p class="precio">$5000</p>
        <button class="agregar-btn" data-nombre="Resma A4 80gr" data-precio="5000">Agregar</button>
      </div>
      <div class="producto">
        <h2>Lapicera Azul</h2>
        <p class="precio">$200</p>
        <button class="agregar-btn" data-nombre="Lapicera Azul" data-precio="200">Agregar</button>
