      <ul id="carrito-lista"></ul>
      <p>Total: $<span id="carrito-total">0</span></p>
      <button id="vaciar-carrito">Vaciar Carrito</button>
    </div>
  </div>

  <script src="{{ url_for('static', filename='script.js') }}"></script>
